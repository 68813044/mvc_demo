    <description></description>
    <display-name>BookInfoServlet</display-name>
    <servlet-name>BookInfoServlet</servlet-name>
    <servlet-class>com.servlet.BookInfoServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookInfoServlet</servlet-name>
    <url-pattern>/BookInfoServlet</url-pattern>
  </servlet-mapping>
